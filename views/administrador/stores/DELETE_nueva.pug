extends ../../layout/index
block contenedor
    body(class="bg-gray-100 min-h-screen")
        main(class="flex-1 overflow-y-auto")
            div(class="flex min-h-screen")
                include ../../partials/leftMenu

                div(class="flex-1 flex flex-col")
                    include ../../partials/header
                    main(class="flex-1 overflow-y-auto md:p-4")
                        div(class="mainDashboard")
                            //******************[CUERPO PANELES]*********************//
                            
                            //HEADER
                            div(class="col-span-12 grid grid-cols-1 md:grid-cols-1  bg-white/70 backdrop-blur-md rounded-2xl p-6")
                                include  ./headers/headerStore.pug

                            
                            //FORMULARIO
                            include ./headers/navFormStore.pug
                            form(action="/admin/tiendas/nueva", method="post" class="col-span-12 grid grid-cols-1 md:grid-cols-1 gap-4 cards") 
                                input(type="hidden", name="_csrf" value = csrfToken)
                                input(type="hidden" name="idPuntoDeVenta" value = (dato && dato.idPuntoDeVenta) ? dato.idPuntoDeVenta :"")


                                //PESTAÑAS.
                                div(class=`step-content ${ (pasoActivo === "1" || !pasoActivo) ? '' : 'hidden' }` data-content="1")
                                    include ./forms/basicStore.pug


                                div(class=`step-content ${ (pasoActivo === "2") ? '' : 'hidden' }` data-content="2")
                                    include ./forms/taxStore.pug

                                
                                
                                div(class=`step-content ${ (pasoActivo === "3") ? '' : 'hidden' }` data-content="3")
                                    h1.h1 Confirmación
            

        script(src="/js/steepForms.js")   
        script(src="/js/dataAsync.js")          


                               
