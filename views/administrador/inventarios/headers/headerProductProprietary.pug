div(class="w-full flex flex-col md:flex-row md:items-center md:justify-start gap-6")
    div(class="flex justify-center  md:items-center gap-4")
         div(class="w-20 h-20 rounded-full bg-gradient-to-br from-gray-200 to-purple-300 flex items-center justify-center flex-shrink-0 shadow-inner shadow-purple-700")
            - const principal = producto.imagenes.find(img => img.tipo === 'principal') || producto.imagenes[0]
            - const imagenUrl = principal ? `${subPath}/productos/${principal.nombreImagen}` : '/img/image-default.webp'
            div(class="w-25  h-25  rounded-2xl     flex items-center justify-center flex-shrink-0 shadow-inner shadow-purple-700 overflow-hidden")
                img(src=imagenUrl alt=producto.nombreProducto class="w-full h-full object-cover")


            
            
    div(class="flex flex-col gap-1")
        h1.h1 #{producto.nombreProducto} 
        
        div(class="flex justify-center md:items-center gap-2")

            div(class="flex items-center gap-4 text-sm text-gray-500 mt-2")
            span 
                i(class="fi-rr-barcode mr-1") 
                | SKU: #{producto.sku}

            div(class=`w-3 h-3 rounded-full ${producto.activo ? 'onDot' : 'offDot'}`)
            span(class="text-xs text-gray-500 font-medium") 
                | #{producto.activo ? 'Disponible para venta' : 'No disponible para venta'}

            div(class=`w-3 h-3 rounded-full ${producto.web ? 'onDot' : 'offDot'}`)
            span(class="text-xs text-gray-500 font-medium") 
                | #{producto.web ? 'Disponible en web' : 'No disponible en web'}
            
            
            
             
            
            
        div(class="flex items-center gap-2 text-sm text-gray-500 mt-1")
          
               
    
    
        
