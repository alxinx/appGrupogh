form(action="", method="post" class="col-span-12 grid grid-cols-1 md:grid-cols-3 gap-4 cards") 

    // Card container
    table(class="w-full")
        thead
        tr(class="bg-[#F6F3FF] text-[#6B5FA7] text-sm font-medium")
            th(class="px-6 py-5 text-left")
            div(class="flex items-center gap-2")
                span Punto de venta
                i(class="fi fi-rr-angle-small-down text-xs")

            th(class="px-6 py-5 text-center") Stock actual
            th(class="px-6 py-5 text-center") Stock mínimo
            th(class="px-6 py-5 text-center") Estado
            th(class="px-6 py-5 text-center") Acción

        tbody(class="divide-y divide-purple-200/40")
        // Row 1
        tr(class="bg-white/30")
            td(class="px-6 py-6 text-left")
            span(class="text-2xl font-semibold text-[#2D275B]") Tienda
            span(class="text-2xl text-[#2D275B]")  Centro

            td(class="px-6 py-6 text-center text-2xl text-[#2D275B]") 15
            td(class="px-6 py-6 text-center text-2xl text-[#2D275B]") 5
            td(class="px-6 py-6 text-center")
            span(class="inline-flex items-center justify-center px-6 py-2 rounded-full bg-green-100 text-green-700 text-lg border border-green-200")
                | Disponible
            td(class="px-6 py-6 text-center")
            button(class="px-8 py-3 rounded-2xl border border-purple-200 bg-white/60 text-[#6B5FA7] text-lg font-medium hover:bg-white transition")
                | Trasladar

        // Row 2
        tr(class="bg-white/30")
            td(class="px-6 py-6 text-left")
            span(class="text-2xl font-semibold text-[#2D275B]") Tienda
            span(class="text-2xl text-[#2D275B]")  Norte

            td(class="px-6 py-6 text-center text-2xl text-[#2D275B]") 3
            td(class="px-6 py-6 text-center text-2xl text-[#2D275B]") 5
            td(class="px-6 py-6 text-center")
            span(class="inline-flex items-center justify-center px-6 py-2 rounded-full bg-amber-100 text-amber-700 text-lg border border-amber-200")
                | Bajo stock
            td(class="px-6 py-6 text-center")
            button(class="px-8 py-3 rounded-2xl border border-purple-200 bg-white/60 text-[#6B5FA7] text-lg font-medium hover:bg-white transition")
                | Trasladar

        // Row 3
        tr(class="bg-white/30")
            td(class="px-6 py-6 text-left")
            span(class="text-2xl text-[#2D275B]") Bodega Principal

            td(class="px-6 py-6 text-center text-2xl text-[#2D275B]") 60
            td(class="px-6 py-6 text-center text-2xl text-[#2D275B]") —
            td(class="px-6 py-6 text-center")
            span(class="inline-flex items-center justify-center px-6 py-2 rounded-full bg-green-100 text-green-700 text-lg border border-green-200")
                | Disponible
            td(class="px-6 py-6 text-center text-2xl text-[#2D275B]") —

    // Footer link
    div(class="px-6 py-5 bg-white/30 border-t border-purple-200/40")
        a(href="#" class="inline-flex items-center gap-3 text-xl text-[#6B5FA7] hover:text-[#2D275B] transition")
        span Ver historial de movimientos
        i(class="fi fi-rr-angle-small-right")
