extends ../layout/index
block contenedor
    // Card
    div(class="w-full max-w-md bg-white rounded-xl shadow-lg p-6 sm:p-8")
      
      // Logo placeholder
      div(class="flex justify-center mb-6")
            img(src="/img/logo.png" width="100" alt="")

      // Title
      h1(class="h1")
        | Registrarse! üëã
      
      if errores 
        p(class="error")=errores.msg

      // Form
      form(class="space-y-4" method="post") 
        
        
        if success
          p(class="success")=success.msg

        input(type="hidden", name="_csrf" value = csrfToken)
        // Nombre
        div
          label(class="label")
            |Nombre  usuario
          input(
            type="text"
            name ="nombreUsuario"
            value = usuario ? usuario.nombreUsuario : ""
            placeholder="Ingresa el email con que estas registrado"
            class="field-text"
          )
          if errores && errores.nombreUsuario != null
            p(class="error")=errores.nombreUsuario


        // Apellido
        div
          label(class="label")
            |Apellido usuario
          input(
            type="text"
            name ="apellidoUsuario"
            value = usuario ? usuario.apellidoUsuario : ""
            placeholder="Ingresa el email con que estas registrado"
            class="field-text"
          )
          if errores && errores.apellidoUsuario != null
            p(class="error")=errores.apellidoUsuario

        // Email
        div
          label(class="label")
            |Tu Email
          input(
            type="text"
            name ="emailUsuario"
            value = usuario ? usuario.emailUsuario : ""
            placeholder="Ingresa el email con que estas registrado"
            
            class="field-text"
          )
          if errores && errores.emailUsuario != null
            p(class="error")=errores.emailUsuario 


        // Password
        div
          label(class="label")
            | Password  
          div(class="relative")
            input(
              type="password"
              name ="password"
              placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
              class="field-text"
            )
            span(class="absolute inset-y-0 right-3 flex items-center text-gray-400")
              | üëÅÔ∏è
          if errores && errores.password != null
              p(class="error")=errores.password

       
        // Button
        button(type="submit" class="btn-primary")
          | Registrar