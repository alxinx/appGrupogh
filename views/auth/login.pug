extends ../layout/index
block contenedor
    // Card
    div(class="w-full max-w-md bg-white rounded-xl shadow-lg p-6 sm:p-8")
      
      // Logo placeholder
      div(class="flex justify-center mb-6")
            img(src="/img/logo.png" width="100" alt="")

      // Title
      h1(class="h1")
        | Hola de nuevo!! üëã
      
      p(class="p")
        | Logueate para empezar a trabajar üòé
      
      if errores 
        p(class="error")=errores.msg

      // Form
      form(action="", method="post") 
        input(type="hidden", name="_csrf" value = csrfToken)
        // Email
        div
          label(class="label")
            |Tu Email
          input(
            type="email"
            name = "emailUsuario"
            value = usuario ? usuario.emailUsuario : ""
            placeholder="Ingresa el email con que estas registrado"
            class="field-text"
          )
